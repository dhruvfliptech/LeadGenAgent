# Development Environment Variables
# These settings are used when running the frontend in development mode

# Backend API URL
VITE_API_URL=http://localhost:8000

# WebSocket URL
VITE_WS_URL=ws://localhost:8000

# Use mock data instead of live API calls
# Set to 'true' to use mock data, 'false' to use live API
VITE_USE_MOCK_DATA=false

# Feature Flags
VITE_ENABLE_WORKFLOWS=true
VITE_ENABLE_TEMPLATES=true
VITE_ENABLE_EMAIL_TRACKING=true
VITE_ENABLE_APPROVALS=true
VITE_ENABLE_DEMO_SITES=true
