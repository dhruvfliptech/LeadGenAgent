# Production Environment Configuration
# CRITICAL: Never commit actual .env.production file to version control!
# Copy this file to .env.production and fill in your production values

###############################################################################
# CORE APPLICATION SETTINGS
###############################################################################

# Environment - MUST be set to production
ENVIRONMENT=production

# Debug Mode - MUST be false in production
DEBUG=false

# Secret Key - REQUIRED: Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=CHANGE_ME_TO_SECURE_RANDOM_VALUE

# JWT Token Settings
ACCESS_TOKEN_EXPIRE_MINUTES=30

###############################################################################
# DATABASE CONFIGURATION
###############################################################################

# PostgreSQL Connection
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://dbuser:SECURE_PASSWORD@db.yourdomain.com:5432/craigslist_leads

# Connection Pool Settings (keep conservative in production)
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

###############################################################################
# REDIS CONFIGURATION
###############################################################################

# Redis Connection (REQUIRED for caching and job queue)
# Format: redis://user:password@host:port or redis://host:port
REDIS_URL=redis://redis.yourdomain.com:6379

# Redis Database Number
REDIS_DB=0

###############################################################################
# API CONFIGURATION
###############################################################################

# API Settings
API_V1_STR=/api/v1
PROJECT_NAME=Craigslist Lead Generation Pro
VERSION=2.0.0

# CORS Configuration - NO wildcards or localhost in production!
# Comma-separated list of allowed origins
ALLOWED_HOSTS=https://yourdomain.com,https://app.yourdomain.com

###############################################################################
# RATE LIMITING & SECURITY
###############################################################################

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Security Settings
ENCRYPT_CREDENTIALS=true
CREDENTIAL_ENCRYPTION_KEY=CHANGE_ME_TO_SECURE_RANDOM_VALUE
SESSION_TIMEOUT_MINUTES=60
MAX_LOGIN_ATTEMPTS=5

###############################################################################
# LOGGING
###############################################################################

# Log Level (INFO recommended for production, DEBUG for troubleshooting)
LOG_LEVEL=INFO

# Log Format
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

