# Environment Configuration
# Copy this file to .env and update the values as needed

# Application Environment
ENVIRONMENT=development
DEBUG=true

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/craigslist_leads
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_DB=0

# API Configuration
API_V1_STR=/api/v1
PROJECT_NAME=Craigslist Lead Generation
VERSION=1.0.0

# CORS Configuration
ALLOWED_HOSTS=["*"]

# Security
SECRET_KEY=your-secret-key-change-in-production-use-openssl-rand-hex-32
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Scraping Configuration
SCRAPER_DELAY_MIN=1.0
SCRAPER_DELAY_MAX=3.0
SCRAPER_CONCURRENT_LIMIT=5
SCRAPER_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Frontend Configuration
VITE_API_URL=http://localhost:8000
VITE_WS_URL=ws://localhost:8000

# =================================================================
# PHASE 2: LINKEDIN INTEGRATION
# =================================================================

# Enable LinkedIn job scraping
LINKEDIN_ENABLED=true

# Service Selection: piloterr (recommended), scraperapi, selenium (not recommended)
LINKEDIN_SERVICE=piloterr

# API Key (for piloterr or scraperapi)
# Piloterr: Sign up at https://www.piloterr.com (Free trial: 50 credits)
# ScraperAPI: Sign up at https://www.scraperapi.com (Free trial: 5K requests)
LINKEDIN_API_KEY=

# DIY Selenium Settings (NOT RECOMMENDED - Use Piloterr instead!)
# WARNING: High ban risk, violates LinkedIn TOS
LINKEDIN_EMAIL=
LINKEDIN_PASSWORD=
LINKEDIN_PROXY_URL=

# LinkedIn Configuration
LINKEDIN_MAX_RESULTS_PER_SEARCH=100
LINKEDIN_RATE_LIMIT_PER_MINUTE=60
LINKEDIN_TIMEOUT_SECONDS=30
LINKEDIN_RETRY_MAX_ATTEMPTS=3
LINKEDIN_STORE_IN_LEADS_TABLE=true
LINKEDIN_DEDUPE_BY_URL=true

# =================================================================
# AI & EMAIL CONFIGURATION
# =================================================================

# AI Provider
AI_PROVIDER=openai
OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# Email Settings
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=
POSTMARK_SERVER_TOKEN=

# User Profile (for email personalization)
USER_NAME=Your Name
USER_EMAIL=your-email@example.com
USER_PHONE=+1-555-0123

# CAPTCHA Solving (for email extraction)
TWOCAPTCHA_API_KEY=
ENABLE_EMAIL_EXTRACTION=false

# =================================================================
# DATA EXPORT CONFIGURATION
# =================================================================

# Export directory for generated files
EXPORT_DIRECTORY=backend/exports

# Export limits and cleanup
EXPORT_MAX_RECORDS=100000
EXPORT_CLEANUP_DAYS=30
EXPORT_COMPRESSION_LEVEL=6