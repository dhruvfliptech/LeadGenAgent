# MINIMAL .env Configuration for CraigLeads Pro Backend
# This is the bare minimum to get the backend running locally

# =============================================================================
# REQUIRED - Application will not start without these
# =============================================================================

# Environment
ENVIRONMENT=development
DEBUG=true

# Database (PostgreSQL) - REQUIRED
# Replace with your PostgreSQL connection string
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/craigleads

# Security - REQUIRED
# Generate a new one with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=CHANGE_THIS_TO_A_SECURE_RANDOM_STRING

# CORS - REQUIRED for frontend to connect
ALLOWED_HOSTS=http://localhost:3000,http://localhost:5173,http://localhost:5174,http://localhost:5176

# =============================================================================
# OPTIONAL - Application will run without these but with limited functionality
# =============================================================================

# Redis (for caching and job queue)
# If not set, job queue and caching will be disabled
REDIS_URL=redis://localhost:6379/0

# API Configuration
API_V1_STR=/api/v1
PROJECT_NAME=CraigLeads Pro
VERSION=2.0.0

# =============================================================================
# AI Services - Only needed if using AI features
# =============================================================================

# OpenAI (for GPT-4, GPT-3.5, embeddings)
# OPENAI_API_KEY=sk-...

# Anthropic (for Claude)
# ANTHROPIC_API_KEY=sk-ant-...

# OpenRouter (for multi-model access)
# OPENROUTER_API_KEY=sk-or-...

# =============================================================================
# External Services - Only needed if using specific features
# =============================================================================

# ElevenLabs (for voice synthesis in video creation)
# ELEVENLABS_API_KEY=...

# Hunter.io (for email finding)
# HUNTER_API_KEY=...

# 2Captcha (for CAPTCHA solving in web scraping)
# TWOCAPTCHA_API_KEY=...

# Vercel (for demo site deployment)
# VERCEL_TOKEN=...

# Piloterr (for LinkedIn scraping)
# PILOTERR_API_KEY=...

# =============================================================================
# Feature Flags - Control which features are enabled
# =============================================================================

# Enable/disable features (true/false)
ENABLE_REAL_TIME_NOTIFICATIONS=true
ENABLE_AUTOMATED_RESPONSES=false
ENABLE_ADVANCED_FILTERING=true
AUTO_RESPONDER_ENABLED=false
RULE_ENGINE_ENABLED=true
ENABLE_ADVANCED_ANALYTICS=true
ENABLE_AB_TESTING=true

# Gmail Integration
GMAIL_ENABLED=false

# Email extraction with CAPTCHA solving
ENABLE_EMAIL_EXTRACTION=false

# =============================================================================
# Database Settings
# =============================================================================

DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=10

# =============================================================================
# Logging
# =============================================================================

LOG_LEVEL=INFO

# =============================================================================
# Scraping Configuration
# =============================================================================

SCRAPER_DELAY_MIN=2.0
SCRAPER_DELAY_MAX=5.0
SCRAPER_CONCURRENT_LIMIT=3

# =============================================================================
# Rate Limiting
# =============================================================================

RATE_LIMIT_PER_MINUTE=60

# =============================================================================
# AI Provider Settings
# =============================================================================

AI_PROVIDER=openai
DEFAULT_AI_MODEL=gpt-3.5-turbo

# =============================================================================
# User Information (for response generation)
# =============================================================================

# USER_NAME=Your Name
# USER_EMAIL=your.email@example.com
# USER_PHONE=+1234567890
# USER_COMPANY=Your Company

# =============================================================================
# Email Tracking
# =============================================================================

TRACKING_DOMAIN=http://localhost:8000
TRACKING_PIXEL_ENABLED=true
LINK_TRACKING_ENABLED=true
